<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<appender class="ch.qos.logback.core.ConsoleAppender" name="stdout">
		<encoder>
			<pattern>%d %5p %c{2} - %m%n</pattern>
		</encoder>
	</appender>
	<root level="INFO">
		<appender-ref ref="stdout"/>
	</root>
	
	<logger name="org.springframework.jdbc" level="DEBUG"/>

</configuration>